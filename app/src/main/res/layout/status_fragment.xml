<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@android:color/white">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TableRow>
            <TextView
                style="@style/labels"
                android:text="@string/tv_date_label"
                />
            <TextView
                android:id="@+id/tv_date"
                style="@style/values"/>
            <TextView
                style="@style/labels"
                android:text="@string/tv_time_label" />
            <TextView
                android:id="@+id/tv_time"
                style="@style/values"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/labels"
                android:text="@string/tv_latitude_label" />
            <TextView
                android:id="@+id/tv_latitude"
                style="@style/values"/>
            <TextView
                style="@style/labels"
                android:text="@string/tv_longitude_label" />
            <TextView
                android:id="@+id/tv_longitude"
                style="@style/values"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/labels"
                android:text="@string/tv_ttff_label"
                />
            <TextView
                android:id="@+id/tv_ttff"
                style="@style/values" />
            <TextView
                style="@style/labels"
                android:text="@string/tv_error_label" />
            <TextView
                android:id="@+id/tv_error"
                style="@style/values"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/labels"
                android:text="@string/tv_speed_label"
                />
            <TextView
                android:id="@+id/tv_speed"
                style="@style/values" />
            <TextView
                style="@style/labels"
                android:text="@string/tv_altitude_label" />
            <TextView
                android:id="@+id/tv_altitude"
                style="@style/values"/>
        </TableRow>
    </TableLayout>

</LinearLayout>